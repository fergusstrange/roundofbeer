{
  "name": "api",
  "cors": {
    "allowed_origins": [
      "https://www.roundofbeer.com"
    ],
    "allowed_methods": [
      "HEAD",
      "GET",
      "POST",
      "PUT",
      "PATCH",
      "DELETE"
    ],
    "allowed_headers": [
      "*"
    ],
    "allow_credentials": true
  },
  "lambda": {
    "policy": [
      {
        "Effect": "Allow",
        "Resource": "*",
        "Action": [
          "dynamodb:CreateTable",
          "dynamodb:Get*",
          "dynamodb:Scan",
          "dynamodb:PutItem",
          "dynamodb:UpdateItem",
          "dynamodb:DeleteItem"
        ]
      }
    ]
  },
  "stages": {
    "production": {
      "domain": "api.roundof.beer",
      "path": "/"
    }
  }
}